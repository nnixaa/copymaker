{
  "manifest_version": 2,

  "name": "Copymaker",
  "description": "Copymaker - inline website copywriting and translation.",
  "version": "0.1",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "html/popup.html"
  },
  "background":{
    "scripts": [
      "lib/vendor/requirejs/require.js",
      "lib/require-cs.js",
      "app/background.js"
    ]
  },
  "permissions": [ "<all_urls>" ],
  "web_accessible_resources": [ "app/*",  "lib/*", "html/*", "css/*", "img/*" ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "lib/vendor/requirejs/require.js",
        "lib/require-cs.js",
        "app/content.js"
      ]
    }
  ]
}
